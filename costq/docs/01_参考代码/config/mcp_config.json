{
  "servers": {
    "_disabled_risp-analyzer": {
      "comment": "已迁移到 Gateway，注释以防回退",
      "command": "python",
      "args": ["-m", "backend.mcp.risp_mcp_server.server"],
      "cwd": ".",
      "env": {
        "MCP_AWS_PROFILE": "${MCP_AWS_PROFILE}",
        "MCP_AWS_DEFAULT_REGION": "${MCP_AWS_DEFAULT_REGION}",
        "AWS_PROFILE": "${AWS_PROFILE}",
        "FASTMCP_LOG_LEVEL": "INFO",
        "PYTHONPATH": "."
      },
      "description": "AWS RISP (Reserved Instance & Savings Plans) MCP 服务器 - DISABLED"
    },
    "gcp-cost": {
      "command": "python",
      "args": ["-m", "backend.mcp.gcp_cost_mcp_server.server"],
      "cwd": ".",
      "env": {
        "FASTMCP_LOG_LEVEL": "INFO",
        "PYTHONPATH": "."
      },
      "description": "GCP Cost MCP 服务器 - 提供 get_today_date 等时间工具"
    },
    "cost-explorer-remote": {
      "command": "uvx",
      "args": ["awslabs.cost-explorer-mcp-server@latest"],
      "env": {
        "AWS_PROFILE": "${AWS_PROFILE}",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "description": "远程 Cost Explorer MCP 服务器"
    },
    "aws-pricing-remote": {
      "command": "uvx",
      "args": ["awslabs.aws-pricing-mcp-server@latest"],
      "env": {
        "AWS_PROFILE": "${AWS_PROFILE}",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "description": "远程 AWS Pricing MCP 服务器"
    },
    "aws-documentation-remote": {
      "command": "uvx",
      "args": ["awslabs.aws-documentation-mcp-server@latest"],
      "env": {
        "AWS_PROFILE": "${AWS_PROFILE}",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "description": "远程 AWS Documentation MCP 服务器"
    },
    "aws-knowledge-remote": {
      "command": "mcp-proxy",
      "args": ["--transport", "streamablehttp", "https://knowledge-mcp.global.api.aws"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "description": "远程 AWS Knowledge MCP 服务器（最新知识源）"
    },
    "aws-api-remote": {
      "command": "uvx",
      "args": ["awslabs.aws-api-mcp-server@latest"],
      "env": {
        "AWS_PROFILE": "${AWS_PROFILE}",
        "AWS_DEFAULT_REGION": "${AWS_DEFAULT_REGION}",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "description": "AWS API MCP 服务器 - 通用 AWS CLI 能力（只读优先，修改/删除需确认）",
      "enabled": true,
      "lazy_init": true,
      "security": {
        "read_only_default": true,
        "require_confirmation": ["modify", "delete", "create"],
        "confirmation_timeout_seconds": 300
      }
    }
  },
  "plugins": {
    "cost_optimizer": {
      "enabled": true,
      "config": {
        "threshold": 1000,
        "currency": "USD"
      }
    },
    "notification": {
      "enabled": false,
      "config": {
        "email": "admin@example.com",
        "slack_webhook": ""
      }
    }
  }
}
